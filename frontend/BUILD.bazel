exports_files( [
    "src/main.js",
    "src/theme.css",
])

genrule(
    name = "bundle",
    srcs = glob(["src/**/*.purs"]) + [
        ":packages.dhall",
        ":spago.dhall",
    ],
    outs = ["index.js"],
    tools = ["@spago//:bin/spago"],
    cmd = """
        INDEX_JS="$$(realpath $@)"
        SPAGO="$$(realpath "$(execpath @spago//:bin/spago)")"
        mkdir -p "$$(dirname "$$INDEX_JS")"
        cd frontend
        "$$SPAGO" -c skip bundle-app -t "$$INDEX_JS"
    """,
    visibility = ["//visibility:public"],
)
